{
  "family": "ml-devops-dev-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ml-devops-dev-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ml-devops-dev-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "ml-devops-dev-container",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-2.amazonaws.com/ml-devops-dev-ml-model:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "dev"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ml-devops-dev",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
